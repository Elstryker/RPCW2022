extends layout

block content
    h1 Lista de ficheiros
    h2 Data: #{date}
    h3 
        a(href="/insert") Inserir ficheiro
    table
        tr
            th  Data
            th  Ficheiro
            th  Tamanho
            th  Tipo
            th  Texto
            th  Delete
        each file in files
            tr
                td= file.date
                td
                    a(href="/download/"+file.file)=file.file
                td= file.size
                td= file.type
                td= file.text
                td
                    form(action="/delete/" + file.file, method="post")
                        input(type="submit", value="Delete")
